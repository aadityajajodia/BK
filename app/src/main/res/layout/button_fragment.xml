<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_fragment"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<TextView
    android:id="@+id/tv_subject"
    android:translationZ="20dp"
    android:elevation="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="40dp"
    android:layout_centerHorizontal="true"/>
    <android.support.v7.widget.CardView
        android:layout_below="@id/tv_subject"
        android:paddingTop="30dp"
        android:id="@+id/card_view_bf"
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
        android:id="@+id/tv_total"
        android:layout_marginTop="50dp"
        android:text="TOTAL"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="50dp"/>
    <EditText
        android:id="@+id/et_total"
        android:inputType="number"
        android:textSize="40dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/tv_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <TextView
        android:text="PRESENT"
        android:textSize="40dp"
        android:id="@+id/tv_present"
        android:layout_below="@id/tv_total"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_present"
        android:inputType="number"
        android:textSize="40dp"
        android:layout_toRightOf="@id/tv_present"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_present" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:text="SUBMIT"
        android:id="@+id/btn_sub_done"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/card_view_bf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_day_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    android:background="@color/white"
    tools:context="jajodia.aditya.com.bunkmanager2.DayInput">

    <TextView
        android:textColor="@color/color_chech_two"
        android:text="Wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="2dp"
        android:id="@+id/dayname_text_view" />

    <FrameLayout
        android:id="@+id/frame_container"
        android:layout_below="@id/dayname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></FrameLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view_two"
        android:layout_below="@id/frame_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        android:layout_alignParentEnd="true"
        ads:adUnitId="@string/banner_ad_unit_id">></com.google.android.gms.ads.AdView>
</RelativeLayout >

        android:layout_height="wrap_content"
        android:text="Aditya Jajodia\n9415918203\naadityajajodia@gmail.com\nStudent At:\nManipal Institute of Technology"
        android:textColor="#060606"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:textSize="19.5dp"
        android:layout_toRightOf="@id/aditya_image_view"
        android:layout_below="@id/ticker_email_text_view"
        />
    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/kunal"
        android:id="@+id/kunal_image_view"
        android:layout_below="@id/ticker_email_text_view"
        />
